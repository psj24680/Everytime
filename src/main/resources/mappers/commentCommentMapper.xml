<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.everytime.comment_comment.dao.CommentCommentDAO">
	<insert id="insertCommentComment">
		INSERT INTO `comment_comment`
		(
			`boardId`
			, `postId`
			, `commentId`
			, `userId`
			, `content`
			, `anonymous`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{boardId}
			, #{postId}
			, #{userId}
			, #{commentId}
			, #{content}
			, #{anonymous}
			, NOW()
			, NOW()
		)
	</insert>

	<select id="selectCommentCommentListByCommentId" parameterType="int" resultType="com.everytime.comment_comment.model.CommentComment">
		SELECT
			`id`
			, `boardId`
			, `postId`
			, `commentId`
			, `userId`
			, `content`
			, `anonymous`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment_comment`
		WHERE
			`commentId` = #{commentId}
		ORDER BY `id` ASC;
	</select>
</mapper>