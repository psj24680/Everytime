<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.everytime.comment.dao.CommentDAO">
	<insert id="insertComment">
		INSERT INTO `comment`
		(
			`boardId`
			, `postId`
			, `userId`
			, `content`
			, `anonymous`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{boardId}
			, #{postId}
			, #{userId}
			, #{content}
			, #{anonymous}
			, NOW()
			, NOW()
		)
	</insert>
</mapper>